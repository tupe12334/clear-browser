{
  "name": "clear-browser",
  "version": "0.0.0",
  "description": "Framework-agnostic library to clear browser data (localStorage, cookies, IndexedDB, cache, etc.) with configurable options",
  "type": "module",
  "main": "./dist/clear-browser.umd.js",
  "module": "./dist/clear-browser.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/clear-browser.es.js",
      "require": "./dist/clear-browser.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "spell": "cspell lint '**/*.{ts,js,md,json}' --gitignore",
    "spell:check": "cspell lint '**/*.{ts,js,md,json}' --gitignore",
    "prepare": "husky",
    "release": "release-it"
  },
  "keywords": [
    "browser",
    "clear",
    "cleanup",
    "localStorage",
    "sessionStorage",
    "cookies",
    "indexedDB",
    "cache",
    "browser-data",
    "data-cleanup",
    "framework-agnostic"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.21.0",
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.8",
    "cspell": "^9.3.0",
    "eslint": "^9.39.1",
    "eslint-config-agent": "^1.7.2",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "release-it": "^19.0.6",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.8"
  }
}
